@model proyectosoft1._4.Models.Comercio

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="mb-4">Eliminar</h1>

<div class="alert alert-danger" role="alert">
    <h5>Estas seguro que queres eliminar este comercio?</h5>
</div>
    <div>
        <h4>Comercio</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
               Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ComNombre)
            </dd>
            <dt class="col-sm-2">
             Ubicacion
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ComUbicacion)
            </dd>
            <dt class="col-sm-2">
             Descripcion
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ComDescripcion)
            </dd>
            <dt class="col-sm-2">
              Direccion
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ComDireccion)
            </dd>
           
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ComId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index">Volver a la lista</a>
        </form>
    </div>

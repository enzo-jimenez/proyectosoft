@model proyectosoft1._4.Models.Producto

@{
    ViewData["Title"] = "Eliminar producto";
}

<h1 class="mb-4">Eliminar</h1>

<div class="alert alert-danger" role="alert">
    <h5>Esta seguro que quiere eliminar este producto?</h5>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProNombre)
        </dd>
        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProPrecio)
        </dd>
        <dt class="col-sm-2">
            Disponible
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProDisponible)
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProDescripcion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
